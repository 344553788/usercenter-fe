<!DOCTYPE HTML>
<html>

<head>
    <meta charset="UTF-8">
    <title>商品列表-No.1商城</title>
    <link rel="shortcut icon" href="images/icon/favicon.ico">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/common.css" />
    <link rel="stylesheet" href="/stylesheets/nav.css">
    <link rel="stylesheet" href="/stylesheets/logo_bar.css">
    <link rel="stylesheet" href="/stylesheets/shop_list.css" />
</head>

<body>
    {{> header}}
    {{> logo_bar}}
    {{> nav}}

    <div id="pds-main">
        <div class="com-w">
            <div class="pds-m-tit">
                <h4>店铺</h4>
            </div>
            <div class="pds-m-list clearfix">
                {{#each shops}}
                <div class="pds-list-item">
                    <div class="pds-item-cont">
                        <div class="pds-item-cont-img">
                            <a href="/shoplist/ShopDetail/{{id}}">
                                {{#if shopLogo}}
                                <img src="{{shopLogo}}" alt="店铺LOGO">
                                {{else}}
                                <img src="/images/default_shop_logo.jpg" alt="店铺LOGO">
                                {{/if}}
                            </a>
                        </div>
                        <h5><a href="#">{{shopName}}</a><br></h5>
                        <p>主营：{{shopBrief}}</p>
                        <p>地址：{{address}}</p>
                        <p>手机：{{tel}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
            <ul class="pagination pagination-sm no-margin pull-right">
                <li><a href="#">«</a></li>
                {{#paginationPlus page.totalPages page.pageNumber '/shoplist/' '' ''}} {{/paginationPlus}}
                <li><a href="#">»</a></li>
            </ul>
        </div>
    </div>
    {{> footer}}
</body>