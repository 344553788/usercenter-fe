<div class="col-md-10 col-xs-9">
    <div class="panel">
        <div class="panel-heading">
            <div class="row">
                <h3 class="panel-title  col-md-4 col-xs-12">消费分红</h3>
                <ol class="breadcrumb col-md-8 col-xs-12 text-right">
                    <li>消费分红</li>
                </ol>
            </div>
        </div>
        <div class="panel-body">
            <!-- search bar -->
            <form class="input-group input-group-sm col-md-4 col-md-offset-8 col-xs-12" method="get" action="/MyRestitution/restitutionRecord">
                <input type="text" name="orderNo" class="form-control pull-right" placeholder="分红单号">
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table  table-hover">
                    <thead>
                        <tr>
                            <th>分红单号</th>
                            <th>商品名称</th>
                            <th>交易金额</th>
                            <th>分红总金额</th>
                            <th>剩余分红金额</th>
                          <!--  <th>每日分红比例</th> -->
                           	<th>已分红金额</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                        <tr>
                        	<td>{{cashNo}}</td>
                            <td>{{productName}}</td>
                            <td>{{orderPrice}}</td>
                            <td>{{cashbackPrice}}</td>
                            <td>{{restCashbackPrice}}</td>
                          <!--  <td>{{dailyRate}}</td>-->
                            <td><a class="btn btn-sm btn-no1" href="/MyRestitution/restitutionRecordDetails?cashNo={{cashNo}}">{{completeCashbackPrice}}</a></td>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <ul class="pagination pagination-sm no-margin pull-right">
                <li><a href="#">«</a></li>
                {{#paginationPlus page.totalPages page.pageNumber '/MyRestitution/restitutionRecord' '' ''}} {{/paginationPlus}}
                <li><a href="#">»</a></li>
            </ul>
        </div>
    </div>
</div>
