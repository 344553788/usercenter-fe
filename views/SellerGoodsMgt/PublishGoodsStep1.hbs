<div class="col-md-10 col-xs-9 relative">
    
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">宝贝发布</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <form class="form-horizontal" action="/SellerGoodsMgt/publishGoodsStep1" method="post">
                    <div class="form-group col-md-12 col-xs-12">
                        <label class="col-md-2 col-xs-12 control-label">选择商品分类:</label>
                        <div class="col-md-3 col-xs-12 ">
                            <!-- <p>顶级</p> -->
                            <select class="form-control" name="goodsTopCategory" id="goodsTopCategory">
                                <option value=''>顶级分类</option>
                                {{#each goodsTopCategories}}
                                    <option value="{{id}}">{{title}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="col-md-3 col-xs-12">
                            <!-- <p>二级</p> -->
                            <select class="form-control" name="goodsSecondCategory" id="goodsSecondCategory">
                                <option value=''>二级分类</option>
                            </select>
                        </div>

                        <div class="col-md-3 col-xs-12">
                            <!-- <p>三级</p> -->
                            <select class="form-control" name="goodsThirdCategory" id="goodsThirdCategory">
                               <option value=''>三级分类</option>
                            </select>
                        </div>
                    </div>
                    <fieldset class="fieldset-style col-md-12 col-xs-12">
                        <div class="col-md-3 col-xs-6 col-md-offset-4 col-xs-offset-2">
                            <input class="btn btn-no1 btn-block" type="submit" value="下一步">
                        </div>
                    </fieldset>
                </form>

                {{#if success}}
                <div class="alert alert-success" role="alert">操作成功</div>
                {{/if}} {{#if failure}}
                <div class="alert alert-danger" role="alert">操作失败</div>
                {{/if}}
            </div>
        </div>
    </div>
    
</div>