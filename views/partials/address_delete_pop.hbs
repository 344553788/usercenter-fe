<div class="modal fade" id="addressDeleteModal" tabindex="-1" role="dialog" aria-labelledby="addressDeleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addressDeleteModalLabel">删除收货地址</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal margin-top-50" action="/MyAddress/deleteAddress" method="post">
                	<input id="address_id" type="hidden" name="id" value="{{id}}">
                    <fieldset>
                        <div class="form-group">
                            <label for="" class="col-md-3 col-xs-3 control-label">
                                收货人姓名:
                            </label>
                            <div class="col-md-6 col-xs-6">
                                <input id="receiver" type="text" class="form-control" placeholder="收货人姓名" name="receiver">
                            </div>
                        </div>
                       <!--  <div class="form-group col-md-10 col-xs-10">
                            <label for="" class="col-md-2 col-xs-2 control-label">
                                所在地区:
                            </label>
                            <div class="col-md-4 col-xs-4">
                                <select class="form-control">
                                    <option selected="selected">北京</option>
                                    <option>河北</option>
                                    <option>江苏</option>
                                </select>
                            </div>
                            <div class="col-md-4 col-xs-4">
                                <select class="form-control">
                                    <option>朝阳区</option>
                                    <option>东城区</option>
                                    <option>西城区</option>
                                </select>
                            </div>
                        </div> -->
                        <div class="form-group">
                            <label for="" class="col-md-3 col-xs-3 control-label">
                                详细地址:
                            </label>
                            <div class="col-md-6 col-xs-6">
                                <textarea id="address" row="3" class="form-control" placeholder="详细地址 街道名称 门牌号 楼层等" name="address"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-md-3 col-xs-3 control-label">
                                邮政编码:
                            </label>
                            <div class="col-md-6 col-xs-6">
                                <input id="zipCode" type="text" class="form-control" placeholder="如您不清楚邮编，请填000000" name="zipCode">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-md-3 col-xs-3 control-label">
                                手机号码:
                            </label>
                            <div class="col-md-6 col-xs-6">
                                <input id="mobile" type="text" class="form-control" placeholder="必填项" name="mobile">
                            </div>
                        </div>
                        <div class="checkbox col-md-12 col-xs-12">
                            <label class="col-md-9 col-xs-9 col-md-offset-3 col-xs-offset-3">
                                <input id="isDefault" type="checkbox" name="isDefault" value="0"> 设置为默认收货地址
                            </label>
                        </div>
                    </fieldset>
                    <fieldset class="fieldset-style col-md-12 col-xs-12">
                        <div class="col-md-4 col-xs-4 col-md-offset-4 col-xs-offset-4">
                            <input class="btn btn-danger btn-block" type="submit" value="删除">
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
