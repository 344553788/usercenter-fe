<div class="col-md-10 col-xs-9">
	<div class="panel">
		<div class="panel-heading">
			<h3 class="panel-title">兑换创收积分</h3>
		</div>
		<div class="panel-body">
			{{> success_failure_feedback}}

			<form class="form-horizontal margin-top-20" action="/mywallet/toGold" method="POST" role="form">
				<div class="form-group">
					<label class="col-md-2 col-xs-12 control-label" for="amount">贡献值数量：</label>
					<div class="col-md-4 col-xs-12">
						<input type="text" class="form-control" id="amount" name="amount" placeholder="请输入要兑换的贡献值数量">
					</div>
				</div>
				<div class="row">
					<div class="col-md-3 col-xs-3 col-md-offset-2 col-xs-offset-2 font-grey">
						<p><small></small></p>
					</div>
				</div>

				<fieldset class="fieldset-style">
                    <div class="col-md-4 col-xs-6 col-md-offset-4 col-xs-offset-2 margin-top-20">
                        <input class="btn btn-no1 btn-block" type="submit" value="提交">
                    </div>
                </fieldset>
			</form>
		</div>
	</div>
</div>
