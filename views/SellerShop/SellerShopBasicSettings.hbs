<div class="col-md-10 col-xs-9">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">店铺信息</h3>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" action="/SellerShop" method="post">
                <div class="form-group col-md-10 col-xs-12">
                    <label for="shopName" class="col-md-2 col-xs-12 control-label">店铺名称:</label>
                    <div class="col-md-5 col-xs-12">
                        <input type="text"  class="form-control" id="shopName" placeholder="输入店铺名称" name="shopName" value="{{sellerShopBasicSettings.shopName}}">
                    </div>
                </div>
                <div class="form-group col-md-10 col-xs-12">
                    <label for="shopBrief" class="col-md-2 col-xs-12 control-label">店铺简介:</label>
                    <div class="col-md-5 col-xs-12">
                        <input type="text" class="form-control" id="shopBrief" placeholder="店铺简介" name="shopBrief"  value="{{sellerShopBasicSettings.shopBrief}}">
                    </div>
                </div>
                <div class="form-group col-md-10 col-xs-12">
                    <label for="address" class="col-md-2 col-xs-12 control-label">经营地址:</label>
                    <div class="col-md-5 col-xs-12">
                        <input type="text"  class="form-control" id="address" placeholder="经营地址" name="address" value="{{sellerShopBasicSettings.address}}">
                    </div>
                </div>
                <div class="form-group col-md-10 col-xs-12">
                    <label for="introduce" class="col-md-2 col-xs-12 control-label">店铺介绍:</label>
                    <div class="col-md-8 col-xs-12">
                        <textarea type="text" rows="5" cols="10" maxlength="500" class="col-md-6 col-xs-6 form-control" id="introduce" placeholder="店铺介绍" name="introduce">{{sellerShopBasicSettings.introduce}}</textarea>
                    </div>
                </div>
                <fieldset class="fieldset-style col-md-12 col-xs-12">
                    <div class="col-md-3 col-xs-6 col-md-offset-4 col-xs-offset-2">
                        <input class="btn btn-no1 btn-block" type="submit" value="保存">
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    {{#if success}}
    <div class="alert alert-success" role="alert">操作成功</div>
    {{/if}} {{#if failure}}
    <div class="alert alert-danger" role="alert">操作失败</div>
    {{/if}}
    
</div>
