<!DOCTYPE HTML>
<html>

<head>
    <meta charset="UTF-8">
    <title>NO.1商城-普惠大众 引领消费</title>
    <link rel="shortcut icon" href="/images/icon/favicon.ico" type="image/x-icon" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/common.css" />
    <link rel="stylesheet" href="/stylesheets/nav.css">
    <link rel="stylesheet" href="/stylesheets/logo_bar.css">
    <link rel="stylesheet" href="/stylesheets/homepage.css" />
</head>

<body>
    {{> header}}
    {{> logo_bar}}
    {{> nav}}
    <div id="banner" class="clearfix">
        <div class="banner-bar">
            <div id="myCarousel" class="carousel slide">
                <!-- 轮播（Carousel）指标 -->
                <ol class="carousel-indicators">
                    {{#each carousels}}
                    <li data-target="#myCarousel" data-slide-to="{{@index}}" {{#compare @index 0}} class="active" {{/compare}}></li>
                    {{/each}}
                </ol>
                <!-- 轮播（Carousel）项目 -->
                <div class="carousel-inner">
                    {{#each carousels}}
                    <div class="item
                        {{#compare @index 0}}
                            active
                        {{/compare}}
                    ">
                        <a href="{{linkUrl}}"><img src="{{imageUrl}}" alt="banner" /></a>
                    </div>
                    {{/each}}
                </div>
                <!-- 轮播（Carousel）导航 -->
                <a class="carousel-control left" href="#myCarousel" data-slide="prev"></a>
                <a class="carousel-control right" href="#myCarousel" data-slide="next"></a>
            </div>
        </div>
    </div>
    <div id="hp-main">
        {{#each floors}}
        <div class="hp-m-pd">
            <div class="hp-m-shoptit com-w">
                <img src="images/icon/title{{floor}}.jpg" alt="商品楼层">
                <h3>{{title}}</h3>
                {{#each mores}}
                    {{#compare @index 0}}
                    <a href="/goodslist/{{linkUrl}}">更多&gt;&gt;</a>
                    {{/compare}}
                {{/each}}
            </div>
            <div class="hp-m-shoplist com-w clearfix">
                <div class="fl">
                    {{#each ads}}
                    <a href="{{linkUrl}}">
                        <img src="{{imageUrl}}" alt="广告分类">
                    </a>
                    {{/each}}
                </div>
                <div class="fr">
                    <div class="hp-m-sl-above clearfix">
                        {{#each bigs}}
                        <div class="hp-m-sl-shopitem">
                            <a href="{{linkUrl}}"> <img src="{{imageUrl}}" alt="商品图片" /></a>
                        </div>
                        {{/each}}
                    </div>
                    <div class="hp-m-sl-bl clearfix">
                        {{#each smalls}}
                        <div class="hp-sl-bl-item">
                            <div class="hp-sl-bl-img">
                                <a href="{{linkUrl}}"><img src="{{imageUrl}}" alt="商品图片" /></a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{> footer}}
    <!-- jQuery -->
    <script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
    $(function() {
        $("#myCarousel").carousel('cycle');

    });
    </script>
</body>

</html>